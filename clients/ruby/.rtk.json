{
  "tagFormat": "ruby-{version}",
  "resources": [
    {
      "path": "conf/client.json",
      "type": "json",
      "params": {
        "property": "gemVersion"
      }
    },
    {
      "path": "CHANGELOG.md",
      "type": "keep-a-changelog"
    },
    {
      "path": "../../.github/workflows/ruby-publish-workflow.yaml",
      "type": "yaml",
      "params": {
        "property": "jobs.build.steps.0.with.ref",
        "post_release_value": "main"
      }
    }
  ]
}
